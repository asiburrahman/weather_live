  <body>
    {{!-- navbar start --}}
       {{>navbar}}
<!-- main header -->
<div class="container-fluid main_header">
    <div class="row">
        <div class="col-md-10 col-12 mx-auto">
          <div class="main_content">
              <form action="" class="temp_from">
                  <input type="text" id="city" placeholder="Enter your city name" autocomplete="off">
                  <input type="submit" value="Search" id="submitBtn">
              </form>
          </div>
          <div class="tempInformation">
              <div class="top_layer">
                  <p id="day">Fri</p>
                  <p id="today_data">11 OCT</p>
              </div>
              <div class="main_layer">
                  <p id="city_name">Get Output Here</p>
                  <div class="middle_layer data_hide">
                      <p><span id="temp">0</span><sup>o</sup>C</p>
                      <p id="temp_status"><i class="fa-solid fa-cloud"></i></p>
                  </div>
              </div>
          </div>
        </div>
    </div>
</div>
<footer>
    <p>Created by Hridoy</p>
</footer>
